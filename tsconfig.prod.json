{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "target": "ES5",
    "noUnusedLocals": true,
    "declaration": true,
    "sourceMap": false,
    "removeComments": false
  },
  "exclude": [
    "**/__stories__/*",
    "**/__tests__/*",
    "**/__mocks__/*",
    "src/storybook/*",
    "scripts/**/*",
    "**/*.test.tsx"
  ]
}
